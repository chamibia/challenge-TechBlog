<article class="post card mb-6">
  <div class="title">
    <a href="/post/{{id}}">
    <span>({{format_url post_url}})</span>
  </div>
  <div class="meta">
    <div class="text">{{content}}</div>
    <br />
    by
    {{user.username}}
    on
    {{format_date created_at}}
    
    {{comments.length}}
      {{format_plural "comment" comments.length}}
    </a>
  </div>
</article>